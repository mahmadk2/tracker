<table class="table table-striped">

<thead>

<tr>

<th>Name</th>

<th>Symbol</th>

<th>Current Price</th>

<% if @user.id == current_user.id %>

<th>Actions</th>

<% end %>

</tr>

</thead>

<tbody>

<% @user_stocks.each do |userstock| %>

<tr>

<td><%= userstock.name %></td>

<td><%= userstock.ticker %></td>

<td><%= userstock.price %></td>

<% if @user.id == current_user.id %>

<td>

<%= link_to 'Delete',

user_stock_path(userstock),
method: :delete,

:data => { :confirm => 'Are you sure?' },

:class => 'btn btn-xs btn-danger' %>

</td>


<% end %>

</tr>

<% end %>

</tbody>

</table>